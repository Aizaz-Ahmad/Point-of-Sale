<UserControl x:Class="EAD_ASS_5.UserControls.ItemBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EAD_ASS_5.UserControls"
             mc:Ignorable="d" Loaded="UserControl_Loaded">

    <Border BorderBrush="#FFE8443B" BorderThickness="1" CornerRadius="5" Padding="5 10 5 10" Background="#FFFFDBDB" Cursor="Hand">
        <WrapPanel Orientation="Vertical" HorizontalAlignment="Center">
            <Image Name="icon" Width="30" HorizontalAlignment="Center" Height="40"/>
            <StackPanel>
                <TextBlock Name="itemName" FontSize="14" FontWeight="Bold" TextAlignment="Center"/>
                <TextBlock Name="quantity"/>
                <TextBlock Name="price"/>
            </StackPanel>
        </WrapPanel>
    </Border>
</UserControl>
